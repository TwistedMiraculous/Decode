// 1. Create a boolean to store the state
boolean toggleState = false;

// 2. Create a boolean to detect button edge
boolean buttonWasPressed = false;

// 3. Toggle logic (inside loop)
if (gamepad1.button && !buttonWasPressed) {
    toggleState = !toggleState;  // flip state
}
buttonWasPressed = gamepad1.button;

// 4. Apply the state
if (toggleState) {
    // ON action
} else {
    // OFF action
}
